\par }\pard\plain \s16\qj \fi567\li0\ri170\sl-320\slmult0\widctlpar\aspalpha\aspnum\faauto\adjustright\rin170\lin0\itap0 \f8\fs24\lang1033\langfe1055\cgrid\langnp1033\langfenp1055 {
